<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <ImageButton
        android:id="@+id/btnAgi"
        android:layout_width="160dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237"
        app:srcCompat="@drawable/agilidad" />

    <ImageButton
        android:id="@+id/btnFuerza"
        android:layout_width="195dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fuerza" />

    <ImageButton
        android:id="@+id/btnInte"
        android:layout_width="203dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763"
        app:srcCompat="@drawable/inteligencia" />

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="149dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/txtWeb"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingresa una direccion web"
            android:inputType="textPersonName"
            android:textColor="#F3EFEF"
            android:textColorHint="#8268B1" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="BUSCAR"
            android:onClick="Buscar"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>